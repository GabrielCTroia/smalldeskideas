/* - $OBJECTS --- GRID ------------------------------------------- */
/* defines the columns width, margins, and state - liquid or fixed */


$spanMargin = 20px

.row 
   margin-left - $spanMargin

.row:after
   Clearfix()   
   

*[class*='span']
   float left
   margin-left $spanMargin
   margin-bottom $spanMargin
   width 100%
   
*[class*='span'].[class*='fullwidth']
   margin-left 0
   
*[class*='span'].[class*='nomargin']
   margin 0   

*[class*='span4']
   Calc(width, 25% \- $spanMargin)

*[class*='span5']
  Calc(width, 20% \- $spanMargin)
   
*[class*='span6']
  Calc(width, 16.667% \- $spanMargin)
   




