/* - $METHODS ---------------------------------------------------- */





Vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args


FadeMe(value)
   -moz-opacity value
   -khtml-opacity value
   opacity value
   value = value * 100
   filter s('alpha(opacity=%s)', value )


CircleMe()
  position relative
  Vendor(border-radius,50%)
  height 100%
  width 100%
  
  
Show()
   display block
   visibility visible
   
Hide()
   display none
   visibility hidden   
     
  
/**
 * input: @property name(width/height/margin)
 *        @value 
 * output: the rendered CSS for the given property and value for all the vendors
 */
Calc(prop, value)
   {prop} -moz-calc(value)
   {prop} -webkit-calc(value)
   {prop} -o-calc(value)
   {prop} -ms-{prop} args
   {prop} calc(value)

/**
 * is called on the after select like this: .element-class:after{ _clearfix }
 */
Clearfix()
   content '.'
   display block
   clear both   
   visibility hidden   
   line-height 0 
   height 0   

Digitize(fade = .5)
   content ''
   background url("../img/overlay-digital-texture.png")
   width 100%
   height 100%
   position absolute
   z-index 100
   top 0
   left 0
   FadeMe(fade)

Rotate(degree)
  -webkit-transform rotate(unit(degree,'deg'))
  -moz-transform rotate(unit(degree,'deg'))
  -ms-transform rotate(unit(degree,'deg'))
  -o-transform rotate(unit(degree,'deg'))
  transform rotate(unit(degree,'deg'))
  
  

